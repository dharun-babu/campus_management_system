<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.i2i.app.model.Grade" table="grade">
        <id name="gradeId" column="grade_id">
            <generator class="identity"/>
        </id>
        <property name="standard" column="standard"/>
        <property name="section" column="section"/>
        <set name="students" table="student" cascade="all" inverse="true" lazy="false" fetch="select">
            <key column="grade_id"/>
            <one-to-many class="com.i2i.app.model.Student"/>
        </set>
    </class>
</hibernate-mapping>
