<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="com.i2i.app.model.Teacher" table="Teacher">
    <id name="teacherId" column="teacher_id">
      <generator class="identity"/>
    </id>
    <property name="teacherName" column="teacher_name" not-null="true"/>
    <property name="subject" column="subject" not-null="true"/>
    <property name="dateOfJoin" column="date_of_join" not-null="true"/>
    <set name="students" table="teachers_students" inverse="true" lazy="false">
      <key column="teacher_id" not-null="true"/>
      <many-to-many column="student_id" class="com.i2i.app.model.Student"/>
    </set>  
  </class>
</hibernate-mapping>
