<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="com.i2i.app.model.Student" table="student">
    <id name="studentId" column="student_id">
      <generator class="identity"/>
    </id>
    <property name="studentName" column="student_name" not-null="true"/>
    <property name="studentDob" column="student_dob" not-null="true" type="date"/>
    <one-to-one name="bankAccount" cascade="all" class="com.i2i.app.model.BankAccount"/>
    <many-to-one name="grade" column="grade_id" cascade="save-update" lazy="false" class="com.i2i.app.model.Grade"/>
    <set name="teachers" table="teachers_students" cascade="save-update" lazy="false">
      <key column="student_id" not-null="true"/>
      <many-to-many column="teacher_id" class="com.i2i.app.model.Teacher"/>
    </set>  
  </class>
</hibernate-mapping>
