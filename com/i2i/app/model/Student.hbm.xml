<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.i2i.app.model.Student" table="student">
        <id name="studentId" column="student_id">
            <generator class="identity"/>
        </id>
        <property name="studentName" column="student_name" />
        <property name="studentDob" column="student_dob" />
        <many-to-one name="grade" class="com.i2i.app.model.Grade" cascade="none" lazy="false" fetch="select">
            <column name="grade_id"/>
        </many-to-one>
        <one-to-one name="bankAccount" class="com.i2i.app.model.BankAccount" cascade="all" fetch="join" />
		<set name="teachers" table="teachers_students" inverse="false" cascade="none" lazy="true" fetch="select">
          <key column="student_id" not-null="true"/>
          <many-to-many column="teacher_id" class="com.i2i.app.model.Teacher"/>
        </set>
    </class>
</hibernate-mapping>
